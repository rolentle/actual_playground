<%= form_for @show do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :twitter_username %>
  <%= f.text_field :twitter_username %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= fields_for :creator, @show.creator do |creator_fields| %>
    <%= creator_fields.label :name, 'Creator' %>
    <%= creator_fields.text_field :name %>
  <% end %>
    <%= f.label :creator_type %>
    <%= f.label :creator_type, 'Group/Network' %>
    <%= f.radio_button :creator_type,'PerformerGroup' %>
    <%= f.label :creator_type, 'Individual' %>
    <%= f.radio_button :creator_type, 'Performer' %>
  <%= fields_for :rss_reader do |rss_fields| %>
    <%= rss_fields.label :rss_feed, 'RSS Feed' %>
    <%= rss_fields.text_field :rss_feed, id: 'rss_feed' %>
    <%= rss_fields.button 'Upload', id: 'rss_upload' %>
  <% end %>
  <%= f.submit 'Submit' %>
<% end %>
<ul id="stories"></ul>
<%= javascript_include_tag 'show_form' %>
